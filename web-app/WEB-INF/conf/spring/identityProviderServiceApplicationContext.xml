<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:task="http://www.springframework.org/schema/task"
 xmlns:util="http://www.springframework.org/schema/util"
 xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">
 
    <task:annotation-driven />
 
 <util:properties id="asynchronousPropSource" location="file:web-app/WEB-INF/conf/spring/identityProdiverServiceProperties/asynchronousSchedule.properties"/>
 <util:properties id="orcPropSource" location="file:web-app/WEB-INF/conf/spring/identityProdiverServiceProperties/localIdentityProviderConf.properties"/>
 <util:properties id="localPropSource" location="file:web-app/WEB-INF/conf/spring/identityProdiverServiceProperties/localIdentityProviderConf.properties"/>
 <util:properties id="handlePropSource" location="file:web-app/WEB-INF/conf/spring/identityProdiverServiceProperties/handleIdentityProviderConf.properties"/>  
 <util:properties id="nlaPropSource" location="file:web-app/WEB-INF/conf/spring/identityProdiverServiceProperties/nlaIdentityProviderConf.properties"/>                               
                                   
  <bean id="local" class="au.com.redboxresearchdata.curationmanager.identityProviderService.CurationManagerLocalIPService" scope="singleton"/> <!-- scope="singleton" autowire="byType" -->
  <bean id="handle" class="au.com.redboxresearchdata.curationmanager.identityProviderService.CurationManagerHandleIPService" scope="singleton"/> <!-- scope="singleton" autowire="byType" -->
  <bean id="orcid" class="au.com.redboxresearchdata.curationmanager.identityProviderService.CurationManagerORCIDIPService" scope="singleton"/> <!-- scope="singleton" autowire="byType" -->
  <bean id="nla" class="au.com.redboxresearchdata.curationmanager.identityProviderService.CurationManagerNLAIPService" scope="singleton"/> <!-- scope="singleton" autowire="byType" -->

 <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
    <property name="corePoolSize" value="1" />
    <property name="maxPoolSize" value="1" />
    <property name="queueCapacity" value="1" />
  </bean>
  
  <bean id="curationTaskExecutor" class="au.com.redboxresearchdata.curationmanager.taskexecutor.CurationTaskExecutor">
     <constructor-arg ref="taskExecutor" />
  </bean>   
</beans>